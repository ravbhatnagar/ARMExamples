{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "identity": {
            "type": "string",
            "defaultValue": "/subscriptions/78814224-3c2d-4932-9fe3-913da0f278ee/resourceGroups/ravdeploymentScriptRG/providers/Microsoft.ManagedIdentity/userAssignedIdentities/ravdeploymentScriptIdentity"
        },
		 "scriptSuffix": {
            "type": "string",
            "defaultValue": "[newGuid()]"
        },
		 "script2Suffix": {
            "type": "string",
            "defaultValue": "[newGuid()]"
        }
    },
	 "variables": {
        "scriptName1": "[concat('helloworldscript-', parameters('scriptSuffix'))]",
		"scriptName2": "[concat('helloworldscript-', parameters('script2Suffix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "name": "[variables('scriptName1')]",
            "apiVersion": "2019-10-01-preview",
            "location": "[resourceGroup().location]",
            "kind": "AzurePowerShell",
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[parameters('identity')]": {}
                }
            },
            "properties": {
                "azPowerShellVersion": "1.7.0",
                "scriptContent": "Write-Output \"Hello Ignite 2019\"",
                "timeout": "PT30M",
                "retentionInterval": "P1D",
                "cleanupPreference": "OnSuccess",
                "forceUpdateTag": "1"
            }
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "name": "[variables('scriptName2')]",
            "apiVersion": "2019-10-01-preview",
            "location": "[resourceGroup().location]",
            "kind": "AzurePowerShell",
            "dependsOn": [
                "[variables('scriptName1')]"
            ],
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[parameters('identity')]": {}
                }
            },
            "properties": {
                 "azPowerShellVersion": "1.7.0",
                "scriptContent": "Write-Output \"Hello Again Ignite 2019 from Script 2\"",
                "timeout": "PT30M",
                "retentionInterval": "P1D"
            }
        }
    ],
    "outputs": {
        "result": {
            "value": "[reference('scriptName').outputs.text]",
            "type": "string"
        }
    }
}   
